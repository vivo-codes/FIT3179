{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 500,
  "title": "Road Crashes Across Victoria in 2018",
  "projection": {"type": "equirectangular"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vivo-codes/FIT3179/main/VIC_LOCALITY_POLYGON_SHP.json",
        "format": {"type": "topojson", "feature": "VIC_LOCALITY_POLYGON_SHP"}
      },
      "mark": {"type": "geoshape", "fill": "#adb5bd", "stroke": "#cad2c5"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vivo-codes/FIT3179/main/crashes.csv"
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"}
      },
      "layer": [
        {
          "mark": {"type": "square"},
          "encoding": {
            "color": {
              "field": "accident_type",
              "type": "ordinal",
              "title": "Accident Type",
                    "scale": {
        "domain": [
          "Collision with object",
          "Collision with vehicle",
          "Fall from or in moving vehicle",
          "No collision and no object struck",
          "Other accident",
          "Struck animal",
          "Struck pedestrian",
          "Vehicle overturned"
        ],
        "range": [
          "#e9d6ec",
          "#edc4b3",
          "#fde2e4",
          "#b8bedd",
          "#eec6ca",
          "#dbe7e4",
          "#e5c3d1",
          "#d5b9b2"
        ]
      }
            },
            "tooltip": [
              {
                "field": "accident_type",
                "type": "ordinal",
                "title": "Accident Type"
              },
              {"field": "lga", "type": "ordinal", "title": "LGA"},
              {
                "field": "state_div",
                "type": "ordinal",
                "title": "State Division"
              },
              {
                "field": "total_persons",
                "type": "quantitative",
                "title": "Total Persons"
              }
            ]
          }
        }
      ]
    }
  ]
}
