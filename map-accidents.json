{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 500,
  "title": "Road Crashes in Victoria in 2018",
  "projection": {"type": "equirectangular"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vivo-codes/FIT3179/main/VIC_LOCALITY_POLYGON_SHP.json",
        "format": {"type": "topojson", "feature": "VIC_LOCALITY_POLYGON_SHP"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vivo-codes/FIT3179/main/crashes.csv"
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"}
      },
      "layer": [
        {
          "mark": {
            "type": "square"
            },
          "encoding": {
            "color": {
              "field": "accident_type",
              "type": "ordinal",
              "title": "Accident Type",
              "scale": {"scheme": "accent"}
            },
          "tooltip": [
            {"field": "accident_type", "type": "ordinal", "title": "Accident Type"},
            {"field": "lga", "type": "ordinal", "title": "LGA"},
            {"field": "state_div", "type": "ordinal", "title": "State Division"},
            {"field": "total_persons", "type": "quantitative", "title": "Total Persons"}
          ]
          }
        }
      ]
}
  ]
}
