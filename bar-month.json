{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "description": "A simple bar chart with embedded data.",
  "data": {"url": "https://raw.githubusercontent.com/vivo-codes/FIT3179/main/division.csv"},
  "selection": {
    "state_selector": {
      "type": "single",
      "fields": ["state_div"],
      "bind": {
        "input": "select",
        "options": [
          null,
          "Metro",
          "Country"
        ],
        "labels": [
          "Show All",
          "Metro",
          "Country"
        ],
        "name": "State Division:"
      }
    }
  },
  "transform": [{"filter": {"selection": "state_selector"}}],
  "mark": "bar",
  "encoding": {
    "x": {"field": "month",
    "sort": ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"],
    "type": "ordinal", "axis": {"labelAngle": 0}},
    "y": {"field": "total", "type": "quantitative"},
    "color": {"field": "state_div", "title": "State Division"},
    "tooltip": {"field": "state_div", "type": "ordinal", "title": "State Division"}
    }
  }
